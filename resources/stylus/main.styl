@import "css/bootstrapCarousel.css"

body
	font-family "Montserrat"
	font-weight normal
	background-color #fff
textarea
	resize none
.btn
	font-weight 300
.btn-success:hover
	color #fff
	background-color #227dc7
	border-color #2176bd
	text-decoration none !important

//Navbar
.bg-white
	padding-top 32px
	padding-bottom 32px
.welcome,
.operator
	.bg-white
		background-color rgba(255,255,255,0.1) !important
		padding-top 32px
		padding-bottom 32px

.navbar-light .navbar-nav .nav-link
	text-transform uppercase
	font-size 12px
	&:hover,
	&:active
		text-decoration underline
.welcome
	.navbar-light .navbar-nav .nav-link
		color #fff
		text-transform uppercase
		font-size 12px
		&:hover,
		&:active
			text-decoration underline
			color #fff
	.navbar-light .navbar-brand
		color #fff 
		font-weight bold
.navbar-light .btn-success
	margin-right 30px
	color #fff
	padding-left 20px
	padding-right 20px
.navbar-light .navbar-brand
	font-weight bold

//Buttons
.btn-success,
.btn-primary
	background-color #2762c3
	border-color #2762c3
	color #fff !important

//Welcome
.card-body_autocategory
	button 
		background-color transparent
		border none
		outline none
		h5
			margin-top 20px
		&:hover, &:active
			h5
				text-decoration underline
.welcome
	background-image url('/img/bg-home.jpg')
	background-size cover
	background-repeat no-repeat
	background-position center center
	position relative
	overflow hidden
	.fullscreen-bg__video 
		position absolute
		left 50%
		top 40%
		min-width 100%
		min-height 100%
		-webkit-transform translate(-50%,-50%)
		-moz-transform translate(-50%,-50%)
		-ms-transform translate(-50%,-50%)
		transform translate(-50%,-50%)
	.container-welcome
		padding-top 100px
		padding-bottom 180px
		z-index 100
		position relative
	h1
		text-transform uppercase
		margin-bottom 60px
		color #fff 
		font-size 40px
		font-weight 900
	h3
		text-transform uppercase
		margin-bottom 60px
		color #fff 
		font-size 30px
		font-weight 900
.search
	padding 0 !important
	font-size 0
	border none !important
	overflow hidden
	height 70px
	.col,
	.col-sm-2 
		margin-top -3px
		padding-left 0
		padding-right 0
		&:nth-child(1)
			border-right 1px solid #acacac
		&:nth-child(2)
			border-right 1px solid #acacac
		&:nth-child(3)
			width 20%
	.custom-select
		border 0 !important
		height 70px
		padding-top 25px
		padding-bottom 25px
	.btn-success
		height 100%
		padding-top 25px
		padding-bottom 25px
.welcome-slider
	background-color #ebf3fe
	padding-top 70px
	padding-bottom 70px
	h1
		font-size 40px
		color #000000
		font-weight normal
		margin-bottom 80px
		text-align center
	.card-img-wrap
		border-radius 6px
		margin-bottom 10px
		text-align center
		padding-left 20px
		padding-right 20px
		height 145px
		line-height 145px
		transition all 0.3s ease-in-out
		img 
			width 120px
			display inline-block
			vertical-align middle 
		&:hover,
		&:active 
			background-color #ffffff
			box-shadow 0 3px 12px rgba(0,0,0,0.15)
		.card-title
			font-size 17px
			color #000000
			text-align center
	.carousel-item.active
		.card-img-wrap
			background-color #ffffff
			box-shadow 0 3px 12px rgba(0,0,0,0.15)
	.carousel-control-prev
		left -70px
	.carousel-control-next
		right -70px
.welcome-counter
	padding-top 40px
	padding-bottom 20px
	background-color #ebf3fe
	text-align center
	h3
		line-height 1
		font-weight 900
		font-size 70px
		color #000000
	.text 
		line-height 1
		margin-top 0
		font-weight normal
		font-size 30px
		color #000000
.executor
	background-color #fff
	padding-top 50px
	.card
		border none
	.card-header
		padding 0
		border-bottom none
		background-color transparent
	.card-body
		padding 0
	.h2
		position relative
		margin-bottom 70px
		line-height 1
		font-weight 300
		font-size 30px
		color #000000
		z-index 10
		span
			position relative
			z-index 10
		&:after
			content ''
			display block
			position absolute
			top 15px
			left 0
			width 100%
			height 25px
			border-radius 4px
			background-color #ebf3fe
			z-index 5
	.col-sm-6:nth-child(odd),
	.col-sm-4:nth-child(odd)
		padding-right 15px
	.col-sm-6:nth-child(even),
	.col-sm-4:nth-child(even)
		padding-right 15px
	.card-item
		border-radius 0
		border-top-left-radius 14px
		border-bottom-left-radius 14px
		overflow hidden
		box-shadow 0 0 8px rgba(0,0,0,0.2)
		.row 
			margin-left 0
			margin-right 0
		.card-left
			position relative
			padding 0
			border 2px solid #00b9ff
			border-top-left-radius 14px
			overflow hidden
			border-bottom-left-radius 14px
			text-align center
			img
				display inline-block
				min-height 100%
				min-width 100%
			.text-name
				margin-bottom 0
				font-size 18px 
				line-height 1
				position absolute
				bottom 0
				left 0
				width 100%
				padding 7px 0
		.card-right
			padding 8px 0
			border 2px solid #fff
			border-left none
			border-right none
			.text 
				margin-bottom 0
				line-height 1
				font-weight 300
				b 
					font-weight 500
			.list-group-item
				padding-top 25px
				padding-bottom 8px
				padding 25px 10px 8px 10px
				border-radius 0 !important
				&:nth-child(1)
					border-top none
			.text-center
				font-size 25px
				font-weight 900
				line-height 1
				margin-bottom 0
		.btn 
			margin-top 10px
			border none
			border-radius 6px
			margin-right 10px
			padding-left 40px
			padding-right 40px
			padding 4px 40px
			background-color #00b9ff
			font-size 18px
			line-height 1
			font-weight 300
			&:hover, &:active
				background-color #2762c3
	.btn-transparent
		padding 15px 70px
		margin-top 40px
		border 2px solid #2762c2
		border-radius 4px
		color #2762c2
		font-weight 300
		font-size 16px
		background-color transparent
		&:hover, &:active
			background-color #2762c2
			color #ffffff
//Dashboard
.setting-info
	text-align left
.setting-auto
	max-width 100px
.custom-file-input ~ .custom-file-label::after
	content "Выбрать"
.card-orders
	position relativ
.remove-icon
	top 10px
	right 15px
	position absolute
	color #fff !important
	cursor pointer
	font-size 12px
	line-height 1
	color #000
	border none
	text-shadow 0 1px 0 #fff
.ordersProcess
	margin-left -15px
	margin-right -15px
	display flex
	flex-wrap wrap
	
//Search
.search 
	width 100%
	box-shadow 0 0 14px rgba(0,0,0,0.2)
	.btn 
		width 100%
	.row
		margin-left 0
		margin-right 0
		
//Operator
.operator
	padding-bottom 30px
	background-image url('/img/bg-call.jpg')
	background-size cover
	background-repeat no-repeat
	background-position center center
	.bg-white
		background-color rgba(0,0,0,0.2) !important
	.navbar-light .navbar-nav .nav-link
		color #fff
		text-transform uppercase
		font-size 12px
		&:hover,
		&:active
			text-decoration underline
			color #fff
	.navbar-light .btn-success
		margin-right 30px
		padding-left 20px
		padding-right 20px
	.btn-success
		padding-left 40px
		padding-right 40px
		background-color #ff9000
		color #fff
		border-color #ff9000
	h1
		margin-top 40px
		text-transform uppercase
		color #fff 
		font-size 70px
		font-weight 900
	h3
		text-transform uppercase
		margin-bottom 60px
		color #fff 
		font-size 45px
		font-weight 300
.operator-auto
	padding-top 40px
	padding-bottom 40px
	h1
		text-align left !important
		color #26a7e9 
		font-size 54px
		font-weight 600
		line-height 1.1
	.text
		font-size 20px
		color #000000 
		font-weight 300
		line-height 1
	.row 
		align-items center
	img 
		margin-bottom 0
.btn-operator
	margin-top 20px
	border 2px solid #26a7e9
	color #26a7e9
	&:hover,
	&:active
		background-color #26a7e9
		color #fff
.operator-form
	background-color #028fa8
	padding-top 25px
	padding-bottom 25px
	.wrap
		display inline-block
		max-width 90%
		img
			display inline-block
	h1
		font-size 50px
		margin-top 20px
		color #fff 
		margin-bottom 35px
		font-weight 300
		line-height 1
		text-align left
	h3
		font-size 30px
		color #fff 
		margin-bottom 30px
		font-weight 300
		text-align left
	.form-wrap
		box-shadow 0 3px 12px rgba(0,0,0,0.2)
		.form-head
			background-color #26a7e9
			padding-top 15px
			padding-bottom 15px
			position relative
			text-align center
		.img-feedback
			display inline-block
		.img-triangle
			width 20px
			position absolute
			bottom -15px
			left 50%
			margin-left -10px
		.form-body
			background-color #ffffff
			padding 35px 60px 
		.btn-operator
			display inline-block
			width 80%

//Who
.who
	background-image url('/img/bg-who.jpg')
	background-size cover
	background-repeat no-repeat
	background-position center center
	.bg-white
		background-color transparent !important
		border none
		box-shadow none !important
	.navbar-light .navbar-nav .nav-link
		color #fff
		text-transform uppercase
		font-size 12px
		&:hover,
		&:active
			text-decoration underline
			color #fff
	h1
		text-align center
		font-weight 900
		margin-bottom 20px
		color #ffffff
		text-transform uppercase
		font-size 40px
		
.table-users
	tr
		td,
		th
			vertical-align middle
		.alert
			padding-top 4px
			padding-bottom 4px
			margin-bottom 0
		.td_last
			width 300px
			text-align center
			a
				display inline-block
				margin-bottom 5px
				&.btn-success
					background-color #38c172
					border-color #38c172
		.td_type
			width 200px
			text-align center
			font-weight bold
		.badge 
			display inline-block
			margin-left 15px
			padding-top 7px
			padding-bottom 5px

//Media
@media only screen and (max-width 1024px) {
	.navbar-light .navbar-brand,
	.welcome .navbar-light .navbar-nav .nav-link,
	.nav-item {
		text-align center
		color #000
	}
	.navbar-light .btn-success {
		margin-right 0
		display inline-block
		width auto
	}
	.search {
		height auto
	}
	.welcome .bg-white, .operator .bg-white {
		background-color #fff !important
	}
	.welcome-slider {
		padding-bottom 30px
	}
	.welcome-slider .carousel-control-next {
		right -20px
		width 20px
	}
	.welcome-slider .carousel-control-prev {
		left -20px
		width 20px
	}
	.welcome-counter h3 {
		font-size 36px
	}
	.welcome-counter .text {
		font-size 18px
	}
	.executor .card-item .card-left {
		border-radius 14px
	}
}